<?xml version="1.0" encoding="UTF-8"?>
 <object-views xmlns="http://axelor.com/xml/ns/object-views"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://axelor.com/xml/ns/object-views
       http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid model="com.axelor.employee.db.Employee" title="Employees" name="employee-grid" >  
      <field name="name" />
      <field name="designation" />
      <field name="salary" />
      <field name="email"/>
      <field name="transientTest"/>
      </grid> 
     
    <form model="com.axelor.employee.db.Employee" title="Employee" name="employee-form" readonlyIf="id" onNew="action.onnew.record" 
      onLoad="acton-onLoad.validate" onSave="action-onSave-validate" width="large"  > 
        <panel-include view="employee-popup-form"/>
       
       <panel name="mainPanel" title="Main Panel" showFrame="true" if-module="">
       
          <panel name="innerPanel1" title="inner Panel1" colSpan="8" >
            <field name="status" showTitle="false" widget="NavSelect"/>
            <field name="name" />
            <field name="fullName" />
            <field name="email"/>
            <field name="designation" />
            <field name="salary" />
     </panel>
            </panel>  
           <panel name="innerPanel2" title="inner Panel2" colSpan="4" itemSpan="3" hideIf="salary &lt;= 10000" sidebar="true" stacked="true" collapseIf="true"> 
             <field name="transientTest"/>
             <field name="bonus"/>
             <field name="isActive" />
             <field name="image" />
              <field name="companies" />
        </panel>
    </form>
    
    <form model="com.axelor.employee.db.Employee" title="Employees" name="employee-popup-form">
            <panel name="innerPanel1" title="Inner Panel1">
               <field name="name" />
               <field name="email"/>
            </panel>
    </form>
    
    <cards name="employee-card" model="com.axelor.employee.db.Employee" title="Employee Card" width="300px">
         <field name="name" />
         <field name="designation" />
         <field name="email"/>
         <field name="image" />
         <template>
            <![CDATA[
             <div class="span4 card-image">
             <img ng-src="{{$image(null, 'image')}}">
              <strong>{{name}}</strong>
            <strong>{{designation}}</strong>
            <strong>{{email}}</strong>
            </div>
            ]]>
         </template>
    </cards>
    
    <search-filters name="search-filters-on-employee" model="com.axelor.employee.db.Employee" title="employee-search">
       <field name="designation" hidden="true"/>
       <filter title="Designation should not be null">
         <domain>self.designation != null</domain>
       </filter>
    </search-filters>
    
    <action-record name="action-onSave-validate" model="com.axelor.employee.db.Employee">
          <field name="isActive" expr="true"/>
      </action-record>
    <action-validate name="acton-onLoad.validate">
      <notify message="you r failed" if="status == STATUS.FAIL"/>
    </action-validate>  
     <action-record name="action.onnew.record" model="com.axelor.employee.db.Employee">
        <field name="designation" expr="trainee developer"/>
        <field name="status" expr="eval: STATUS.PASS"/>
        <field name="salary" expr="eval: 30000"/>
        <field name="companies" expr="action: action-record-default-company-details"/>
     </action-record>
      <action-record name="action-record-default-company-details" model="com.axelor.employee.db.Company" search="self.address IS NOT NULL">
        <field name="companyName" expr="Default"/>  
      </action-record>
  </object-views>     